<h1>Sign Up!</h1>
<%= form_for @user do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, 'Confirm Password' %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit 'Create account' %>
<% end %>