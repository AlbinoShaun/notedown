<aside class="span3">
	<ul class="nav nav-list well well-small" id="notebook-nav">
		<li class="nav-header" id="notebook-nav-header">
			<%= notebook.title %>
				<%= link_to 'Delete', notebook, confirm: "Are you sure you want to delete #{notebook.title}?", method: :delete, class: 'label delete-button' %>
		</li>
		<% notebook.notes.each do |n| %>
			<li class="note-item">
				<%= link_to n.title, n %>
				<%= link_to 'Delete', n, confirm: "Are you sure you want to delete #{n.title}?", method: :delete, class: 'label delete-button' %>
			</li>
		<% end %>
		<li class="divider"></li>
		<li><%= link_to 'New Note', new_notebook_note_path(notebook) %></li>
	</ul>
</aside>
