<% if object.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			Oops! There <%= object.errors.count > 1 ? 'were' : 'was' %> <%= pluralize(object.errors.count, 'error') %>.
		</div>
		<ul>
			<% object.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>